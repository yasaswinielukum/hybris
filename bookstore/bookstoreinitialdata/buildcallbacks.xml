 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation

	 before/after ant macro "clean"
		 <macrodef name="bookstoreinitialdata_before_clean"/>
		 <macrodef name="bookstoreinitialdata_after_clean"/>

	 before/after ant macro "build"
		 <macrodef name="bookstoreinitialdata_before_build"/>
		 <macrodef name="bookstoreinitialdata_after_build"/>

	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="bookstoreinitialdata_before_compile_core">
		 <macrodef name="bookstoreinitialdata_after_compile_core">

	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="bookstoreinitialdata_before_compile_web" />
		 <macrodef name="bookstoreinitialdata_after_compile_web" />

 Preparing extension

	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)
		 <macrodef name="bookstoreinitialdata_only_once_prepare"/>

 Creating ear module/production

	before/after ant macro "ear"
		<macrodef name="bookstoreinitialdata_before_ear"/>
		<macrodef name="bookstoreinitialdata_after_ear"/>

	before/after ant macro "production" - for hybris server only
		<macrodef name="bookstoreinitialdata_before_production" />
		<macrodef name="bookstoreinitialdata_after_production" />

 JUnit Test

	before/after ant macro "yunitinit" 
		<macrodef name="bookstoreinitialdata_before_yunitinit" />
		<macrodef name="bookstoreinitialdata_after_yunitinit" />

	before/after ant macro "yunit"
		<macrodef name="bookstoreinitialdata_before_yunit" />
		<macrodef name="bookstoreinitialdata_after_yunit" /> 

 Distribution package

	before/after ant macro "dist" - internal target; only for use when platform is available in source code
		<macrodef name="bookstoreinitialdata_after_dist"/>
		<macrodef name="bookstoreinitialdata_before_dist"/>

	before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		<macrodef name="bookstoreinitialdata_before_dist_copy"/>
		<macrodef name="bookstoreinitialdata_after_dist_copy"/>

--><project name="bookstoreinitialdata_buildcallbacks">
    	
    <import file="${ext.bookstoreinitialdata.path}/resources/bookstoreinitialdata/ant/ant-bind-impex-template.xml"/>
    	
    <!-- 
		Called whenever 'ant ear' is used. this callback can be used to modify the content of the ear file

		${ear.path}: 			path to ear
	-->
    	
    <macrodef name="bookstoreinitialdata_before_ear">
        		
        <sequential>
            			
            <!-- you can do anything before the EAR file is being packed -->
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="bookstoreinitialdata_clean_classpath_file">
        		
        <sequential>
            			
            <copy failonerror="true" file="${ext.bookstoreinitialdata.path}/.classpath" overwrite="true" tofile="${ext.bookstoreinitialdata.path}/.classpath.edit">
                				
                <filterchain>
                    					
                    <linecontainsregexp negate="true">
                        						
                        <regexp pattern="^(\t\t\t\t|)$"/>
                          
                        <!-- added by script -->
                        					
                    </linecontainsregexp>
                    				
                </filterchain>
                			
            </copy>
            			
            <move failonerror="true" file="${ext.bookstoreinitialdata.path}/.classpath.edit" overwrite="true" tofile="${ext.bookstoreinitialdata.path}/.classpath"/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="bookstoreinitialdata_after_clean">
        		
        <sequential>
            			
            <echo level="info" message="Generating .classpath file for bookstoreinitialdata"/>
            			
            <create_extension_classpath_file extname="bookstoreinitialdata"/>
            			
            <bookstoreinitialdata_clean_classpath_file/>
            		
        </sequential>
        	
    </macrodef>
    	
    <!-- exclude impex files from localization -->
    	
    <patternset id="bookstoreinitialdata.localization.pattern">
        		
        <patternset refid="localization.defaultpattern"/>
        		
        <exclude name="**/*.impex"/>
        	
    </patternset>
    
</project>
